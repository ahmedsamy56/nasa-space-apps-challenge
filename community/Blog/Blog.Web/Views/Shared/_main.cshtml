@using Blog.Utilities
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="title" content="Ask online Form">
    <meta name="robots" content="index, nofollow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="English">
    <title>Ask Me</title>
    <link href="~/visitor/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/visitor/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/visitor/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    @await RenderSectionAsync("Style", required: false)
</head>

<body>
    <div class="top-menu-bottom932">
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                    <a class="navbar-brand" href="/Forum/home/index"><img src="~/visitor/image/logo.png" alt="Logo" width="70px"></a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav"> </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.EditorRole))
                            {
                                <li><a class="nav-link active" href="/Admin/Dashboard/Index">Dashboard</a></li>
                            }
                        }
                        <li><a href="/Forum/home/index">Home</a></li>
                        <li><a href="/Forum/Forum/Create">Discuss</a></li>
                        <li><a href="/blog/home">Blog</a></li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </div>


    @RenderBody()

    <section class="footer-part">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h4>Where We Are</h4>
                    <p>Ask Me Network, 33 Street, Syada Zeinab, Cairo, Egypt.</p>
                    <p>Support: (+2)01111011110 | info@example.com</p>
                </div>
                <div class="col-md-4">
                    <h4>Quick Links</h4>
                    <ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.EditorRole))
                            {
                                <li><a class="nav-link active" href="/Admin/Dashboard/Index">Dashboard</a></li>
                            }
                        }
                        <li><a href="/Forum/home/index">Home</a></li>
                        <li><a href="/Forum/Forum/Create">Discuss</a></li>
                        <li><a href="/blog/home">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Follow Us</h4>
                    <div class="social-icons">
                        <a href="#"><i class="fa fa-twitter-square"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-youtube"></i></a>
                        <a href="#"><i class="fa fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/visitor/js/jquery-3.1.1.min.js"></script>
    <script src="~/visitor/js/bootstrap.min.js"></script>
    <script src="~/visitor/js/npm.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>