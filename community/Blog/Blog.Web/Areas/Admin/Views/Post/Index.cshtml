@model IEnumerable<Post>

@{
    ViewBag.PageTitle = "Post Management";
    ViewBag.CardTitle = "View Posts";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}
<div>
    <a class="btn btn-primary" href="/Admin/Post/Create">Create</a>
</div>

<br />
<table class="table table-hover" width="100%">
    <thead class="text-bold">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Author</td>
            <td>Date Created</td>
            <td>Actions</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Category.Name</td>
            <td>@item.ApplicationUser.Name</td>
            <td>@item.CreatedAt</td>
            <td>
                <a class="btn btn-success" href="/Admin/Post/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Admin/Post/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
