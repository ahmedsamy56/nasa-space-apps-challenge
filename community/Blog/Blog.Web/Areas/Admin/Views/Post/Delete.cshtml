@model Post

@{
    ViewBag.PageTitle = "Delete Post";
    ViewBag.CardTitle = "Delete Post";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>@ViewBag.CardTitle</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this post?</h5>

                    <div class="mb-4">
                        <h6><strong>Post Title:</strong>  @Model.Title</h6>
                        <h6><strong>Category:</strong>  @Model.Category.Name</h6>
                        <h6><strong>Posted by:</strong>  @Model.ApplicationUser.Name</h6>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Img))
                    {
                        <div class="text-center mb-4">
                            <img src="~/@Model.Img" class="img-fluid img-thumbnail" style="max-width: 300px;" alt="Post Image" />
                        </div>
                    }

                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> Deleting this post is irreversible and will remove the post along with the associated image.
                    </div>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

