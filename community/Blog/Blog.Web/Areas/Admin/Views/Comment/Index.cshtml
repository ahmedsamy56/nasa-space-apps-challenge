@model IEnumerable<Blog.Entities.Models.Comment>
@{
    ViewBag.PageTitle = "Comment Management";
    ViewBag.CardTitle = "All Comments";
    Layout = "_dashboard";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Post Title</th>
            <th>User</th>
            <th>Content</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Post.Title</td>
                <td>@comment.applicationUser.Name</td>
                <td>@comment.Contant</td>
                <td>@comment.DateTime.ToString("MMM dd, yyyy - hh:mm tt")</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@comment.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>